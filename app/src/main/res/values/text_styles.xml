<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_darker_gray</item>
    </style>

    <style name="Muted">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tab_text_inactive</item>
    </style>

    <style name="Value">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_darker_gray</item>
    </style>

    <style name="ValuePositive" parent="Value">
        <item name="android:textColor">@color/pnl_green</item>
    </style>

    <style name="ValueNegative" parent="Value">
        <item name="android:textColor">@color/pnl_red</item>
    </style>

    <style name="Tab">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_text_inactive</item>
    </style>
</resources>


